{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block base_content %}
    {% block page_checkout %}
        <div class="account-register">
        <div class="row">
            <div class="col-lg-12">
                <div class="card register-card">
                    <div class="card-body">
                        <div class="card-body">

                            <p class="finish-ordernumber">
                                {{ "ByjunoPayment.order_canceled" | trans | raw }}
                            </p>

                            <div class="finish-content">
                                <div class="finish-action">
                                    <a href="{{ path('frontend.home.page') }}" class="btn btn-primary finish-back-button" title="{{ "ByjunoPayment.back_to_shop" | trans | raw }}">
                                        {{ "ByjunoPayment.back_to_shop" | trans | raw }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
