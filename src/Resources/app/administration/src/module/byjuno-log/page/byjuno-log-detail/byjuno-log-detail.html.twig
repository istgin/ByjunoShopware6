{% block cembra_log_entity_detail %}
    <sw-page class="byjuno-log-detail">
        <template #smart-bar-actions>
            <sw-button :routerLink="{ name: 'byjuno.log.list' }">
                Return
            </sw-button>
        </template>

        <template #content>
            <sw-card-view>
                <sw-card v-if="bundle" :isLoading="isLoading">
                    <mt-textarea type="textarea" label="Request" v-model="bundle.request"></mt-textarea>
                    <mt-textarea type="textarea" label="Response" v-model="bundle.response"></mt-textarea>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}
