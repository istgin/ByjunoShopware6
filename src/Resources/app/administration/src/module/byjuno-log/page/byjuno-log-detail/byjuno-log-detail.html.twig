{% block cembra_log_entity_detail %}
    <sw-page class="byjuno-log-detail">
        <template #smart-bar-actions>
            <sw-button :routerLink="{ name: 'byjuno.log.list' }">
                Return
            </sw-button>
        </template>

        <template #content>
            <sw-card-view>
                <sw-card v-if="bundle" :isLoading="isLoading">
                    <sw-textarea-field type="textarea" label="Request" v-model="bundle.request"></sw-textarea-field>
                    <sw-textarea-field type="textarea" label="Response" v-model="bundle.response"></sw-textarea-field>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}
